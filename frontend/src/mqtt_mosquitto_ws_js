import mqtt from "mqtt";

const client = mqtt.connect("ws://test.mosquitto.org:8080");

client.on("connect", () => {
  console.log("Frontend tilsluttet Mosquitto!");
  client.subscribe("test/topic");
  client.publish("test/topic", "Hej fra Mosquitto frontend!");
});

client.on("message", (topic, message) => {
  console.log(`Modtaget besked p√• ${topic}: ${message.toString()}`);
  // Her kan du fx opdatere dit UI
});

// Eksporter client hvis du vil bruge det andre steder
export default client;
